{
    "version": 2,
    "buildCommand": "cd frontend && pnpm install && pnpm build && cd ../backend && pip install -r requirements.txt",
    "outputDirectory": "frontend/.next",
    "framework": {
      "name": "nextjs",
      "directory": "frontend"
    },
    "functions": {
      "api/main.py": {
        "runtime": "@vercel/python@4.7.1",
        "memory": 1024,
        "maxDuration": 10,
        "includeFiles": "backend/**"
      }
    },
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/api/main.py"
      },
      {
        "source": "/(.*)",
        "destination": "/"
      }
    ],
    "env": {
     
    }
  }